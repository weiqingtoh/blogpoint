<%= form_for ([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.text_field :body, placeholder: "Your Comment", class: "input-long" %>
	</p>
	<div class="input-append">
		<p>
			<%= f.text_field :commenter, placeholder: "Your Name", class: "input-short" %>
			<%= f.submit class: "btn" %>
		</p>
	</div>
<% end %>