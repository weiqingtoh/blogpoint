<p>
	<strong>Title:</strong>
	<%= @article.title %>
</p>

<p>
	<strong>Text:</strong>
	<%= @article.text %>
</p>

<% if !@article.comments.nil? %>
	<h2>Comments</h2>
	<% @article.comments.each do |comment| %>
		<%= render 'comment', comment: comment %>
	<% end %>
<% end %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Back', articles_path %>
<%= link_to 'Edit', edit_article_path(@article) %>